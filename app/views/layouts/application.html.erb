<!DOCTYPE html>
<html>
  <head>
    <title>WeatherOutfits</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  
   <body>
     <header class="navbar navbar-default" role="navigation">
      <div class="navbar-inner">
        <div class="container">
          <div id="logo" class="navbar-brand"><%= link_to "Weather", root_path %></div>
          <nav class="collapse navbar-collapse navbar-ex1-collapse">
        	<% if user_signed_in? -%>
        	<input type="hidden" id="user_id" name="user_id" value="<%= current_user.id %>"/> 
			  <li class="pull-right dropdown">         
                 <button class="btn btn-default dropdown-toggle pull-right" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                   <%= "Hi, #{current_user.email}!"%>
                    <span class="caret"></span>
                 </button>
                 <ul class="dropdown-menu" role="menu">
                            <li><%= link_to "Current Weather", root_path %></li>
                            <li><%= link_to "Forecast", forecasts_path %></li>						
                             <li><%= link_to 'Edit account', edit_user_registration_path %></li>
                             <li class="divider"></li>
                             <li><%= link_to ' Sign out', destroy_user_session_path, :method => :delete %></li>
                  </ul>
                  </li>
                  <% else %>
                  <li><%= link_to 'Signin/Signup', new_user_session_path %></li>
                  <% end %>
                </nav>
            </div>
          </div>
        </header>
        
            <div id="main_content" class="container">
		      <% flash.each do |name, msg| %>
			  <%= content_tag(:div, msg, class: "alert alert-info") %>
		     <% end %>
               
			 <div class="container_fluid">
			 	<%= yield %>
				
			</div>
		</div>
	</div>	
  </body>
</html>

  